{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ article.title }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ article.content }}</td>
			</tr>
			<tr>
				<th>Author</th>
				<td>{{ article.author }}</td>
			</tr>
			<tr>
				<th>PublishedAt</th>
				<td>{{ article.publishedAt ? article.publishedAt|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<h3>Commentaires</h3>
	<ul>
		{% for comment in article.comments %}
			<li>
				<b>{{ comment.author }}</b>
				{{ comment.content }}
				<small>{{ comment.createdAt | date('d/m/Y h:m') }}</small>
			</li>
		{% endfor %}
	</ul>

	<hr>
	<h3>Mettre un commentaire</h3>
	{{ include('comment/_form.html.twig') }}

	<hr>

	<a href="{{ path('app_article_index') }}">back to list</a>

	<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

	{{ include('article/_delete_form.html.twig') }}
{% endblock %}
