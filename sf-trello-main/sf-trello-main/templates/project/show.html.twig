{% extends 'base.html.twig' %}

{% block title %}Project
{% endblock %}

{% block body %}
	<h1>Project</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ project.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ project.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ project.description }}</td>
			</tr>
			<tr>
				<th>CreateAt</th>
				<td>{{ project.createAt ? project.createAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<hr>
	<h2>Liste des taches</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Priorit√©</th>
				<th>Done</th>
				<th>Deadline</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for task in tasks %}
				<tr>
					<td>{{ task.id }}</td>
					<td>{{ task.title }}</td>
					<td>{{ task.priority }}</td>
					<td>{{ task.done ? 'Yes' : 'No' }}</td>
					<td>{{ task.deadline ? task.deadline|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_task_show', {'id': task.id}) }}">show</a>
						<a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<hr>
	<h2>Ajouter une tache</h2>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button>Ajouter la tache</button>
	{{ form_end(form) }}

	<hr>

	<a href="{{ path('app_project_index') }}">back to list</a>

	<a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>

	{{ include('project/_delete_form.html.twig') }}
{% endblock %}
