{% extends 'base.html.twig' %}

{% block title %}BlogPost index
{% endblock %}

{% block body %}
	<h1>BlogPost index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Author</th>
				<th>Summary</th>
				<th>Content</th>
				<th>Image</th>
				<th>PublishedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for blog_post in blog_posts %}
				<tr>
					<td>{{ blog_post.id }}</td>
					<td>{{ blog_post.title }}</td>
					<td>{{ blog_post.author }}</td>
					<td>{{ blog_post.summary }}</td>
					<td>{{ blog_post.content }}</td>
					<td><img src="{{ blog_post.image }}" alt="{{ blog_post.title }}"></td>
					<td>{{ blog_post.publishedAt ? blog_post.publishedAt|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_blog_post_show', {'id': blog_post.id}) }}">show</a>
						<a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_blog_post_new') }}">Create new</a>
{% endblock %}
